@model FizzBuzz

@{
    ViewData["Title"] = "FizzBuzz";
}


<div class="container col-xxl-8 px-4 py-5">
    <div class="row gy-2 h-100 row-cols-md-2 row-cols-1">
        <div class="col border-2 border-end">
            <h1 class="fw-bold lh-1 mb-3">Fizz Buzz</h1>
            <h4 class="lead">
                When it counts you Fizz Buzz. A JavaScript coding exercise using loops. Write a program that prints the numbers from 1 to 100
                and for multiples of '3' displays <strong>'Fizz'</strong> insted of the number and for the multiples of '5' display 
                <strong>'Buzz'</strong>. If a multiple of both display <strong>'FizzBuzz'</strong>
            </h4>
                
            <h2 class="mt-5 border-bottom border-2">Instruction</h2>
            <p>
                Enter 2 numbers. The first number will be used to evaluate Fizz.
                The second number will be used to evaluate Buzz.
                FizzBuzz will be determined based on the combination of the two numbers.
            </p>
        </div>
        <div class="col">
            <div>
                <h5>Enter numbers</h5>
                <form asp-controller="Home" asp-action="FizzBuzz" method="post">
                    <div class="form-group">
                        <label asp-for="FizzValue">Fizz Value</label>
                        <input type="number" asp-for="FizzValue" class="form-control" value="@Model.FizzValue"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="BuzzValue">Buzz Value</label>
                        <input type="number" asp-for="BuzzValue" class="form-control" value="@Model.BuzzValue"/>
                    </div>
                    <button type="submit" class="btn btn-outline-dark mt-2">Submit</button>
                </form>
                <h2 class="mt-5 border-bottom border-2">Results</h2>
                <div  class="overflow-auto" style="max-height: 50vh;">
                    @if (Model.Result.Count > 0)
                    {
                        <table class="table table-hover table-striped table-dark table-responsive">
                            <thead>
                                <tr><th colspan="5">FizzBuzz Results</th></tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Result.Count; i += 5)
                                {
                                    <tr><td>@Model.Result[i]</td><td>@Model.Result[i + 1]</td><td>@Model.Result[i + 2]</td><td>@Model.Result[i + 3]</td><td>@Model.Result[i + 4]</td></tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>